<h1>Budgets list</h1>

<% if @selected_account.nil? %>
  <div class="notice">No account selected!</div>

<% else %>

  <% if @budgets.nil? or @budgets.empty? %>
    <ul><li>No budgets available.</ul>
  <% else %>
    <ul><li>Total number of budgets: <%= @budget_count %></ul>
    <table>
      <tr>
        <th>ID
        <th>Name
    <% @budgets.each do |id, budget| %>
      <tr>
        <td><%= budget.id %>
        <td><%= budget.name %>
    <% end %>
    </table>
  <% end %>

<% end %>

<div id="local-footer">
  <span class="small-print"><%= link_to("Back to home", home_index_path) %></span>
</div>
